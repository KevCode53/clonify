---
import Layout from '../layouts/Layout.astro';
import { playlists } from '@/lib/data';

import PlayListItemCard from '@/components/PlayListItemCard.astro'

---

<Layout title="Clonify">
  <div id="playlist-container" class="playlist relative text-white trasition-all duration-1000 bg-green-500">

    <!-- PageHeader -->

    <div class="relative z-10  ">
      <!-- Greetings -->
      <h1 class="text-6xl greetings">Buenos Dias</h1>

      <div class="playlists-container">
        {
          playlists.slice(0, 6).map((playlist) => <PlayListItemCard playlist={playlist}/>)
        }
      </div>
    </div>

    <div class="absolute inset-0 bg-gradient-to-t from-zinc-900 via-zinc-900/80"></div>

  </div>
</Layout>

<style>
  .playlist {
  }
  .greetings {
    padding: 2.4rem;
  }
  @media (min-width: 0px) {
    .playlists-container {
      grid-template-columns: repeat(2, 1fr);
    }
  }
  @media (min-width: 815px) {
    .playlists-container {
      grid-template-columns: repeat(3, 1fr);
    }
  }
  @media (min-width: 1141px) {
    .playlists-container {
      gap: 1.2rem;
    }
  }
  .playlists-container {
    padding: 0 2.4rem;
    display: grid;
    grid-auto-rows: 6.4rem;
    grid-template-columns: auto/repeat(auto-fill, minmax(max(27rem), 25%), 1fr);
    grid-template-rows: 6.4rem;
    gap: .8rem;
  }
</style>
