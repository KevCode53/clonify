---
interface Props {
  href?:string
}

const{href} = Astro.props
---


<li>
  <a href={href} class="item-link flex gap-4 text-zinc-400 items-center transition duration-300">
    <slot/>
  </a>
</li>

<style>
  li {
    /* padding: .4rem 1.2rem; */
    height: 4.8rem;
    display: flex;
  }
  li a {
    width: 100%;
    display: flex;
    padding: .4rem 1.2rem;
    gap: 2rem;
  }
</style>
